{
  "name": "app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "pnpm simple-git-hooks",
    "dev": "vite dev --port 3200",
    "build": "vite build --mode production",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "run-p lint:*",
    "lint:code": "eslint . --ignore-path=\".eslintignore\"",
    "lint:style": "stylelint '**/*.{svelte,css}'",
    "format": "prettier --plugin-search-dir --ignore-path .prettierignore --write ."
  },
  "devDependencies": {
    "@csstools/postcss-global-data": "^2.0.0",
    "@svelte-put/preprocess-inline-svg": "^2.1.3",
    "@sveltejs/adapter-cloudflare": "2.3.1",
    "@sveltejs/kit": "^1.22.3",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/postcss-js": "^4.0.1",
    "@types/postcss-mixins": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vnphanquang/eslint-config": "^2.0.0",
    "@vnphanquang/prettierrc": "^1.0.1",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte": "^2.32.2",
    "hygen": "^6.2.11",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.26",
    "postcss-custom-selectors": "^7.1.4",
    "postcss-html": "^1.5.0",
    "postcss-import": "^15.1.0",
    "postcss-js": "^4.0.1",
    "postcss-load-config": "^4.0.1",
    "postcss-mixins": "^9.0.4",
    "postcss-nesting": "^12.0.0",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "simple-git-hooks": "^2.8.1",
    "stylelint": "^15.10.2",
    "stylelint-config-clean-order": "^5.0.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.6",
    "tailwindcss": "^3.3.3",
    "tiny-glob": "^0.2.9",
    "tslib": "^2.6.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.4"
  },
  "packageManager": "pnpm@8.4.0",
  "engines": {
    "pnpm": ">=8.4.0",
    "node": ">=18.16.0"
  },
  "volta": {
    "node": "18.16.0"
  }
}
